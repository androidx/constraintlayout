<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    motion:defaultDuration="400">

    <Transition
        motion:constraintSetEnd="@+id/mode3d"
        motion:constraintSetStart="@id/mode_no_graph"
        motion:duration="300">

        <OnSwipe
            motion:onTouchUp="stop"
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@id/card"
            motion:touchAnchorSide="bottom" />
        <KeyFrameSet>

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/mode_no_graph">
        <ConstraintOverride
            android:id="@id/graph3d"
            android:alpha="0"
            />
        <ConstraintOverride
            android:id="@id/graph"
            android:alpha="0"
            />
    </ConstraintSet>

<ConstraintSet android:id="@+id/mode2d" >
        <ConstraintOverride
            android:id="@id/graph3d"
            android:alpha="0"
            />
        <ConstraintOverride
            android:id="@id/graph"
            android:alpha="1"
            />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/mode2d_fold" motion:deriveConstraintsFrom="@+id/mode2d">

    </ConstraintSet>
    <ConstraintSet android:id="@+id/mode2d_full">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/mode3d" >
        <ConstraintOverride
            android:id="@+id/graph3d"
            android:alpha="1"
            />
        <ConstraintOverride
            android:id="@+id/graph"
            android:alpha="0"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/mode3d_fold" motion:deriveConstraintsFrom="@+id/mode3d">

        <ConstraintOverride
            android:id="@id/graph3d"
            android:alpha="1"
            />
        <ConstraintOverride
            android:id="@id/graph"
            android:alpha="0"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/mode3d_full">

    </ConstraintSet>

<ConstraintSet android:id="@+id/range3d"></ConstraintSet>
    <ConstraintSet android:id="@+id/big2d"></ConstraintSet>
    <ConstraintSet android:id="@+id/big3d"></ConstraintSet>
    <!-- =====================  View Transitions =====================-->
    <ViewTransition
        android:id="@+id/click3"
        motion:motionTarget="button3"
        motion:viewTransitionMode="noState"
        motion:onStateTransition="actionDown"
        motion:duration="200">

        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="0"
                android:scaleY="1"
                android:scaleX="1">
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/basic_button_background" />
            </KeyAttribute>
            <KeyAttribute
                motion:framePosition="20"
                android:scaleY="0.5"
                android:scaleX="0.5">
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#C38C64" />
            </KeyAttribute>
            <KeyAttribute
                motion:framePosition="100"
                android:scaleY="1"
                android:scaleX="1">
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/basic_button_background" />
            </KeyAttribute>
        </KeyFrameSet>
    </ViewTransition>

    <ViewTransition
        android:id="@+id/click4"
        motion:motionTarget="button4"
        motion:viewTransitionMode="noState"
        motion:onStateTransition="actionDown"
        motion:duration="200">

        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="0"
                android:scaleY="1"
                android:scaleX="1">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/adv_background" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="20"
                android:scaleY="0.5"
                android:scaleX="0.5">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue=".3" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#C38C64" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="100"
                android:scaleY="1"
                android:scaleX="1">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="@dimen/calc_round" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/adv_background" />
            </KeyAttribute>
        </KeyFrameSet>
    </ViewTransition>

    <!-- =====================  View Transitions =====================-->
    <ViewTransition
        android:id="@+id/inverse"
        motion:viewTransitionMode="allStates"
        motion:duration="30">
        <ConstraintOverride>
            <CustomAttribute
                motion:attributeName="background"
                motion:customColorDrawableValue="@color/basic_button_background" />
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/cal_def_text" />
        </ConstraintOverride>

    </ViewTransition>

    <ViewTransition
        android:id="@+id/un_inverse"
        motion:viewTransitionMode="allStates"
        motion:duration="30">
        <ConstraintOverride>
            <CustomAttribute
                motion:attributeName="background"
                motion:customColorDrawableValue="@color/adv_background" />
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/cal_adv_text" />
        </ConstraintOverride>

    </ViewTransition>

    <ViewTransition
        android:id="@+id/spinAC"
        motion:motionTarget="@+id/button16"
        motion:viewTransitionMode="noState"
        motion:onStateTransition="actionDown"
        motion:duration="200">

        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="0"
                android:scaleY="1"
                android:scaleX="1">

                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/clear_background" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="20"
                android:scaleY="0.5"
                android:scaleX="0.5">

                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#C38C64" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="100"
                android:scaleY="1"
                android:scaleX="1">

                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/clear_background" />
            </KeyAttribute>
        </KeyFrameSet>
    </ViewTransition>

    <ViewTransition
        android:id="@+id/spin_equ"
        motion:motionTarget="@+id/button10"
        motion:viewTransitionMode="noState"
        motion:onStateTransition="actionDown"
        motion:duration="200">

        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="0"
                android:scaleY="1"
                android:scaleX="1">
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#906e68" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="20"
                android:scaleY="0.5"
                android:scaleX="0.5">

                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#FFF" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="100"
                android:scaleY="1"
                android:scaleX="1">

                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#906e68" />
            </KeyAttribute>
        </KeyFrameSet>
    </ViewTransition>

</MotionScene>