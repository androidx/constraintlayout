<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnSwipe motion:onTouchUp="stop" motion:dragDirection="dragDown" motion:touchAnchorId="@id/card" motion:touchAnchorSide="bottom"/>
        <KeyFrameSet>

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/card"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintHeight_percent="0.3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/button10">
            <CustomAttribute motion:attributeName="roundPercent" motion:customFloatValue=".2"/>
        </Constraint>

<!--        <ConstraintOverride-->
<!--            android:id="@+id/line0"-->
<!--            android:layout_height="wrap_content"-->
<!--            >-->
<!--            <CustomAttribute motion:attributeName="textSize"-->
<!--                motion:customDimension="32sp"/>-->
<!--        </ConstraintOverride>-->
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/card"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintHeight_percent="0.5"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/adv_base"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            motion:layout_constraintHeight_percent=".3"
            android:background="#888"
            motion:layout_constraintBottom_toBottomOf="@id/card"
            />
        <Constraint
            android:id="@+id/button10"
            >
            <CustomAttribute motion:attributeName="roundPercent" motion:customFloatValue="0.3"/>
        </Constraint>
<!--        <ConstraintOverride-->
<!--            android:id="@+id/line0"-->
<!--            android:layout_height="0dp"-->
<!--            >-->

<!--        </ConstraintOverride>-->
    </ConstraintSet>

    <ConstraintSet android:id="@+id/mode_no_graph" >
        <Constraint
            android:id="@+id/graph"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            motion:layout_constraintBottom_toBottomOf="@id/card"
            motion:layout_constraintTop_toTopOf="@id/card"
            motion:layout_constraintStart_toStartOf="@id/card"
            motion:layout_constraintLeft_toLeftOf="@id/card"
            motion:layout_constraintEnd_toEndOf="@id/card"
            motion:layout_constraintRight_toRightOf="@id/card"
            />

        <Constraint
            android:id="@+id/graph3d"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:alpha="0"
            android:visibility="gone"
            android:background="#0000"
            motion:layout_constraintBottom_toBottomOf="@id/card"
            motion:layout_constraintEnd_toEndOf="@id/card"
            motion:layout_constraintLeft_toLeftOf="@id/card"
            motion:layout_constraintRight_toRightOf="@id/card"
            motion:layout_constraintStart_toStartOf="@id/card"
            motion:layout_constraintTop_toTopOf="@id/card"
            />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/mode2d" >
        <Constraint
            android:id="@+id/graph"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            android:visibility="visible"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            motion:layout_constraintBottom_toBottomOf="@id/card"
            motion:layout_constraintTop_toTopOf="@id/card"
            motion:layout_constraintStart_toStartOf="@id/card"
            motion:layout_constraintLeft_toLeftOf="@id/card"
            motion:layout_constraintEnd_toEndOf="@id/card"
            motion:layout_constraintRight_toRightOf="@id/card"
            />

        <Constraint
            android:id="@+id/graph3d"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:alpha="0"
            android:visibility="gone"
            android:background="#0000"
            motion:layout_constraintBottom_toBottomOf="@id/card"
            motion:layout_constraintEnd_toEndOf="@id/card"
            motion:layout_constraintLeft_toLeftOf="@id/card"
            motion:layout_constraintRight_toRightOf="@id/card"
            motion:layout_constraintStart_toStartOf="@id/card"
            motion:layout_constraintTop_toTopOf="@id/card"
            />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/mode3d">
        <Constraint
            android:id="@+id/graph"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            motion:layout_constraintBottom_toBottomOf="@id/card"
            motion:layout_constraintTop_toTopOf="@id/card"
            motion:layout_constraintStart_toStartOf="@id/card"
            motion:layout_constraintLeft_toLeftOf="@id/card"
            motion:layout_constraintEnd_toEndOf="@id/card"
            motion:layout_constraintRight_toRightOf="@id/card"
            />
        <Constraint
            android:id="@+id/graph3d"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:alpha="1"
            android:visibility="visible"
            android:background="#0000"
            motion:layout_constraintBottom_toBottomOf="@id/card"
            motion:layout_constraintEnd_toEndOf="@id/card"
            motion:layout_constraintLeft_toLeftOf="@id/card"
            motion:layout_constraintRight_toRightOf="@id/card"
            motion:layout_constraintStart_toStartOf="@id/card"
            motion:layout_constraintTop_toTopOf="@id/card"
            />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/range3d">
    </ConstraintSet>
    <ConstraintSet android:id="@+id/big2d" >
    </ConstraintSet>
    <ConstraintSet android:id="@+id/big3d">
    </ConstraintSet>
    <!-- =====================  View Transitions =====================-->
    <ViewTransition
        android:id="@+id/click3"
        motion:motionTarget="button3"
        motion:viewTransitionMode="noState"
        motion:onStateTransition="actionDown"
        motion:duration="600">

        <KeyFrameSet>
            <KeyAttribute motion:framePosition="0">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/basic_button_background"  />
            </KeyAttribute>

            <KeyAttribute motion:framePosition="20">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue=".3" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#C38C64" />
            </KeyAttribute>

            <KeyAttribute motion:framePosition="80">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#e9d6c8" />
            </KeyAttribute>
            <KeyAttribute motion:framePosition="90">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#e9d6c8" />
            </KeyAttribute>
            <KeyAttribute motion:framePosition="100">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="@dimen/calc_round" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/basic_button_background"  />
             </KeyAttribute>
        </KeyFrameSet>
    </ViewTransition>

    <ViewTransition
        android:id="@+id/click4"
        motion:motionTarget="button4"
        motion:viewTransitionMode="noState"
        motion:onStateTransition="actionDown"
        motion:duration="600">

        <KeyFrameSet>
            <KeyAttribute motion:framePosition="0">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/adv_background"  />
            </KeyAttribute>

            <KeyAttribute motion:framePosition="20">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue=".3" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#C38C64" />
            </KeyAttribute>

            <KeyAttribute motion:framePosition="80">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#e9d6c8" />
            </KeyAttribute>
            <KeyAttribute motion:framePosition="90">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#e9d6c8" />
            </KeyAttribute>
            <KeyAttribute motion:framePosition="100">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="@dimen/calc_round" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="@color/adv_background"  />
            </KeyAttribute>
        </KeyFrameSet>
    </ViewTransition>

    <!-- =====================  View Transitions =====================-->
    <ViewTransition
        android:id="@+id/inverse"
        motion:viewTransitionMode="allStates"
        motion:duration="30">
        <ConstraintOverride>
            <CustomAttribute
                motion:attributeName="background"
                motion:customColorDrawableValue="@color/basic_button_background" />
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/cal_def_text" />
        </ConstraintOverride>

    </ViewTransition>

    <ViewTransition
        android:id="@+id/un_inverse"
        motion:viewTransitionMode="allStates"
        motion:duration="30">
        <ConstraintOverride>
            <CustomAttribute
                motion:attributeName="background"
                motion:customColorDrawableValue="@color/adv_background" />
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/cal_adv_text" />
        </ConstraintOverride>

    </ViewTransition>

    <ViewTransition
        android:id="@+id/spinAC"
        motion:motionTarget="@+id/button16"
        motion:viewTransitionMode="noState"
        motion:onStateTransition="actionDown"
        motion:duration="600">

        <KeyFrameSet>
            <KeyAttribute motion:framePosition="0">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#fed694" />
            </KeyAttribute>

            <KeyAttribute motion:framePosition="20">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue=".3" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#C38C64" />
            </KeyAttribute>

            <KeyAttribute motion:framePosition="80">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#e9d6c8" />
            </KeyAttribute>
            <KeyAttribute motion:framePosition="90">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#e9d6c8" />
            </KeyAttribute>
            <KeyAttribute motion:framePosition="100">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="@dimen/calc_round" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#fed694" />
            </KeyAttribute>
        </KeyFrameSet>
    </ViewTransition>

    <ViewTransition
        android:id="@+id/spin_equ"
        motion:motionTarget="@+id/button10"
        motion:viewTransitionMode="noState"
        motion:onStateTransition="actionDown"
        motion:duration="600">

        <KeyFrameSet>
            <KeyAttribute motion:framePosition="0">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#906e68" />
            </KeyAttribute>

            <KeyAttribute motion:framePosition="20">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue=".3" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#FFF" />
            </KeyAttribute>

            <KeyAttribute motion:framePosition="80">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#e9d6c8" />
            </KeyAttribute>
            <KeyAttribute motion:framePosition="90">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#e9d6c8" />
            </KeyAttribute>
            <KeyAttribute motion:framePosition="100">
                <CustomAttribute
                    motion:attributeName="roundPercent"
                    motion:customFloatValue="1" />
                <CustomAttribute
                    motion:attributeName="background"
                    motion:customColorDrawableValue="#906e68" />
            </KeyAttribute>
        </KeyFrameSet>
    </ViewTransition>

</MotionScene>